# Server Configuration
NODE_ENV=development
PORT=3000

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# DynamoDB Table Names
DYNAMODB_USERS_TABLE=PawConnect-Users
DYNAMODB_PETS_TABLE=PawConnect-Pets
DYNAMODB_APPLICATIONS_TABLE=PawConnect-Applications
DYNAMODB_FAVORITES_TABLE=PawConnect-Favorites

# S3 Bucket
S3_BUCKET_NAME=pawconnect-images-your-id

# JWT Secrets (Change these to random strings in production)
JWT_SECRET=your_jwt_secret_random_string_change_this
JWT_REFRESH_SECRET=your_refresh_secret_random_string_change_this
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:5173
